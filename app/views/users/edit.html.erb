<div class="container">
<h2>User info</h2>

<% if @user.errors.any? %>
<div class="alert alert-danger">
<h2><%= @user.errors.count %> errors </h2>
<ul>
	<% @user.errors.full_messages.each do |message| %>
	<li><%= message %></li>
	<% end %>
</ul>
</div>
<% end %>

<%= form_for(@user) do |f| %>

<!-- エラーメッセージ表示-->

<!-- エラーメッセージ表示-->

<div class="field">
	<%= f.label :title %>
	<%= f.text_field :name, class: "name" %>
</div>

<div class="field">
	<%= f.label :image %>
	<%= f.attachment_field :profile_image, class: "user_image" %>
</div>

<div class="field">
	<%= f.label :introduction %>
	<%= f.text_area :introduction, class: "introduction" %>
</div>

<div class="actions">
	<%= f.submit %>
</div>

<% end %>
</div>